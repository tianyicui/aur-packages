# Contributor: tianyicui <tianyicui@gmail.com>

pkgname='rubinius'
pkgver=1.1.0
pkgrel=1
pkgdesc="Rubinius, the Ruby VM"
arch=('i686' 'x86_64')
license=('BSD')
url="http://rubini.us/"
source=(http://asset.rubini.us/rubinius-1.1.0-20100923.tar.gz)
md5sums=(e2ae16238b201de09975abe19da09ea9)
depends=(openssl readline zlib)
makedepends=(ruby1.8 ruby1.8-rake bison rubygems1.8)

build(){
  cd $srcdir/rubinius-$pkgver
  ruby-1.8 ./configure --skip-system --prefix=/usr --mandir=/usr/share/man --includedir=/usr/include/rubinius
  FAKEROOT="$pkgdir/" /opt/ruby1.8/lib/ruby/gems/1.8/bin/rake install
}
