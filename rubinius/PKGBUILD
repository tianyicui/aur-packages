pkgname='rubinius'
pkgver=1.1.0
pkgrel=1
pkgdesc="Rubinius, the Ruby VM"
arch=('i686' 'x86_64')
license=('BSD')
url="http://rubini.us/"
source=(http://asset.rubini.us/rubinius-1.1.0-20100923.tar.gz)
md5sums=(e2ae16238b201de09975abe19da09ea9)
depends=(openssl readline zlib)
makedepends=(ruby bison)

build(){
  cd $srcdir/rubinius-$pkgver
  ./configure --skip-system --skip-prebuilt --prefix=/usr --mandir=/usr/share/man --includedir=/usr/include/rubinius
  FAKEROOT="$pkgdir/" rake install
}
